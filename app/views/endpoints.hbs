<div class="wrapper">
	<h2>{{project.name}} : эндпоинты ({{endpoints.length}})</h2>
	<ul>
		<li><span class="italic">ID проекта:</span> <span class="">{{project._id}}</span></li>
		<li><span class="italic">Base URL:</span> <span class="">{{project.baseUrl}}</span></li>
	</ul>
</div>

<div class="wrapper">
	<div id="editor" style="font-family: monospace; height: 600px; width: 100%;"></div>

	<script src="/lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
    <script>
		var editor = ace.edit("editor");
        editor.setOptions({
            fontSize: "12pt",
            autoScrollEditorIntoView: true,
            copyWithEmptySelection: true,
            tabSize: 2,
            useSoftTabs: true
        });
        editor.setTheme("ace/theme/monokai");
        editor.session.setMode("ace/mode/javascript");
        editor.focus();
        
		editor.session.setOptions({ 
			tabSize: 8, 
			useSoftTabs: true 
		})

        editor.setValue('const abc = "123";');    
    </script>
</div>

{{#each endpoints}}
	<div class="wrapper">
		<table style="width: 100%">
		    <colgroup>
		       <col span="1" style="width: 20%;">
		       <col span="1" style="width: 10%;">
		       <col span="1" style="width: 70%;">
		    </colgroup>
		    
		    <tbody>
		        <tr>
		        	<td><span class="mono">{{this._id}}</span></td>
					<td><span class="mono" style="text-transform: uppercase;">{{this.method}}</span></td>
		    		<td><span class="mono">/site/{{this.project.baseUrl}}</span><span class="mono bold">/{{this.url}}</span></td>
		        </tr>
		    </tbody>
		</table>

		<br />

		<details>
			<summary>Сниппетов {{this.snippets.length}}</summary>
			{{#each this.snippets}}
				<div class="snippet">
					<h4>{{this._id}}</h4>
					<p class="italic">{{this.name}}</p>
					<pre>{{this.code}}</pre>
				</div>
			{{/each}}
		</details>
	</div>
{{/each}}
